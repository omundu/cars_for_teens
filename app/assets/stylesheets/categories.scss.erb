.car_icon {
  background-image: url(<%= asset_path('icon_spritesheet.png') %>);
  background-repeat: no-repeat;
  display: block;
  width: 250px;
  height: 100px;
  text-indent:-9999px;
  margin: 10px 10px 10px 5px;
  float: left;
}

.categories .car_icon {
  text-indent: 0px;
  padding-top: 40px;
  padding-left: 80px;
  opacity: 0.4;
  filter: alpha(opacity=40);
  &:hover{
    opacity: 1.0;
    filter: alpha(opacity=100);
  }
}

#large_cars {background-position: 0px 0px;}
#midsize_cars {background-position: 0px -100px;}
#large_suvs {background-position: 0px -200px;}
#midsize_suvs {background-position: 0px -300px;}
#small_suvs {background-position: 0px -400px;}
#minivans {background-position: 0px -500px;}
